<!-- Main modal -->
<div id="userModal" tabindex="-1" aria-hidden="true" class="hidden fixed inset-0 flex items-center justify-center z-50">
    <div class="relative p-4 w-full max-w-2xl max-h-full">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
            <!-- Modal header -->
            <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                    Create User for Branch
                </h3>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="userModal">
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                    </svg>
                    <span class="sr-only">Close modal</span>
                </button>
            </div>
            <!-- Modal body (scrollable content) -->
            <div class="p-4 md:p-5 space-y-4 max-h-[60vh] overflow-y-auto">
                <%= form_with model: @user || User.new, local: true do |form| %>
                    <div class="space-y-4">
                        <!-- User name input -->
                        <div class="flex flex-col">
                            <%= form.label :first_name, class: 'text-sm font-medium text-gray-900 dark:text-white' %>
                            <%= form.text_field :first_name, required: true, class: 'mt-2 p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:text-white dark:border-gray-600' %>
                        </div>

                        <div class="flex flex-col">
                            <%= form.label :last_name, class: 'text-sm font-medium text-gray-900 dark:text-white' %>
                            <%= form.text_field :last_name, required: true, class: 'mt-2 p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:text-white dark:border-gray-600' %>
                        </div>

                        <div class="flex flex-col">
                            <%= form.label :phone_number, class: 'text-sm font-medium text-gray-900 dark:text-white' %>
                            <%= form.telephone_field :phone_number, required: true, class: 'mt-2 p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:text-white dark:border-gray-600' %>
                        </div>

                        <div class="flex flex-col">
                            <%= form.label :image, class: 'text-sm font-medium text-gray-900 dark:text-white' %>
                            <%= form.file_field :image, class: 'mt-2 p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:text-white dark:border-gray-600' %>
                        </div>

                        <div class="flex flex-col">
                            <%= form.label :role, class: 'text-sm font-medium text-gray-900 dark:text-white' %>
                            <%= form.select :role, User::ROLES, { include_blank: true }, required: true, class: 'mt-2 p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:text-white dark:border-gray-600' %>
                        </div>

                        <div class="flex flex-col">
                            <%= form.label :email, class: 'text-sm font-medium text-gray-900 dark:text-white' %>
                            <%= form.email_field :email, required: true, class: 'mt-2 p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:text-white dark:border-gray-600' %>
                        </div>

                        <div class="flex flex-col">
                            <%= form.label :password, class: 'text-sm font-medium text-gray-900 dark:text-white' %>
                            <%= form.password_field :password, required: true, class: 'mt-2 p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:text-white dark:border-gray-600' %>
                        </div>

                        <div class="flex flex-col">
                            <%= form.label :password_confirmation, class: 'text-sm font-medium text-gray-900 dark:text-white' %>
                            <%= form.password_field :password_confirmation, required: true, class: 'mt-2 p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:text-white dark:border-gray-600' %>
                        </div>

                        <div class="flex flex-col">
                        <div class="flex flex-col">
                        <%= form.label :branch_id, class: 'text-sm font-medium text-gray-900 dark:text-white' %>
                        <%= form.collection_select :branch_id, Branch.all, :id, :name,
                            { include_blank: true },
                            { selected: @user&.branch_id || @branch.id, class: 'mt-2 p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:text-white dark:border-gray-600' } %>
                      </div>

                        <div class="flex justify-end mt-4">
                            <%= form.submit 'Create User', class: 'text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800' %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const modal = document.getElementById('userModal');
    const openModalButton = document.querySelector('[data-modal-toggle="userModal"]');
    const closeModalButtons = modal.querySelectorAll('[data-modal-hide="userModal"]');

    openModalButton.addEventListener('click', () => {
        modal.classList.remove('hidden');
    });

    closeModalButtons.forEach(button => {
        button.addEventListener('click', () => {
            modal.classList.add('hidden');
        });
    });

    window.addEventListener('click', (event) => {
        if (event.target === modal) {
            modal.classList.add('hidden');
        }
    });
});
</script>
