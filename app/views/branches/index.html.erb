<section class="bg-white p-5">
  <div class="max-w-screen-xl lg:px-12">
    <div class="bg-white dark:bg-gray-800 relative shadow-md sm:rounded-lg overflow-hidden">
      <div class="flex flex-col md:flex-row items-center justify-between space-y-3 md:space-y-0 md:space-x-4 p-4">
        <div class="w-full md:w-1/2">
          <h2 class="text-2xl font-bold">All Branches</h2>
        </div>
        <div class="w-full md:w-auto flex flex-col md:flex-row space-y-2 md:space-y-0 items-stretch md:items-center justify-end md:space-x-3 flex-shrink-0">
          <%= link_to  new_branch_path, class: 'flex items-center justify-center text-white bg-lightGreen hover:bg-darkBlue focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2' do %>
            <i class="fa-solid fa-plus mr-2"></i>
            Create Branch
          <% end %>
        </div>
      </div>
      <div class="overflow-x-auto">
        <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
          <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
              <th scope="col" class="px-6 py-3">Name</th>
              <th scope="col" class="px-6 py-3">Phone Number</th>
              <th scope="col" class="px-6 py-3">District</th>
              <th scope="col" class="px-6 py-3 text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @branches.each do |branch| %>
              <tr class="border-b border-gray-200 hover:bg-gray-100">
                <td class="px-6 py-3"><%= branch.name %></td>
                <td class="px-6 py-3"><%= branch.phone_number %></td>
                <td class="px-6 py-3"><%= branch.districts.map(&:name).join(', ') %></td>
                <td class="px-6 py-3 text-center">
                  <div class="relative">
                    <div class="relative">
                      <button data-dropdown-toggle="dropdown-<%= branch.id %>" class="text-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-300 border border-lightGreen rounded" type="button">
                        <div class="p-1 flex flex-row justify-center items-center  space-between">
                          <span class="hidden md:block lg:block " >Actions</span>
                          <i class="fa-solid fa-chevron-down"></i>
                        </div>
                      </button>
                    </button>
                    <div id="dropdown-<%= branch.id %>" class="absolute right-0 mt-2 w-32 bg-white border rounded-lg shadow-lg z-10 hidden overflow-hidden font-Outfit font-semibold">
                      <%= link_to 'View', branch, class: 'block px-4 py-2 text-lightGreen hover:bg-gray-100' %>
                      <%= link_to 'Edit', edit_branch_path(branch), class: 'block px-4 py-2 text-darkBlue hover:bg-gray-100' %>
                      <%= button_to 'Delete', branch, method: :delete, data: { confirm: 'Are you sure?' }, class: 'block px-12 py-2 text-red-600 hover:bg-gray-100 text-center' %>
                    </div>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
