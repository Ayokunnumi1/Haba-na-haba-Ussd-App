<h2 class="text-2xl font-bold mb-6">All Branches</h2>
<div class="mb-4">
  <%= link_to 'Create Branch', new_branch_path, class: 'bg-blue-500 text-white px-4 py-2 rounded-lg shadow hover:bg-blue-600' %>
</div>
<table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-lg">
  <thead class="bg-gray-50">
    <tr>
      <th class="py-2 px-4 border-b border-gray-200 text-left text-gray-600 font-semibold">Name</th>
      <th class="py-2 px-4 border-b border-gray-200 text-left text-gray-600 font-semibold">Phone Number</th>
      <th class="py-2 px-4 border-b border-gray-200 text-left text-gray-600 font-semibold">District</th>
      <th class="py-2 px-4 border-b border-gray-200 text-left text-gray-600 font-semibold">County</th>
      <th class="py-2 px-4 border-b border-gray-200 text-left text-gray-600 font-semibold">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @branches.each do |branch| %>
      <tr class="border-b hover:bg-gray-50">
        <td class="py-2 px-4 text-gray-700"><%= branch.name %></td>
        <td class="py-2 px-4 text-gray-700"><%= branch.phone_number %></td>
        <td class="py-2 px-4 text-gray-700"><%= branch.district.name %></td>
        <td class="py-2 px-4 text-gray-700"><%= branch.county.name %></td>
        <td class="py-2 px-4">
          <%= link_to 'Show', branch_path(branch), class: 'bg-blue-500 text-white px-2 py-1 rounded hover:bg-blue-600' %>
          <%= link_to 'Edit', edit_branch_path(branch), class: 'bg-yellow-500 text-white px-2 py-1 rounded hover:bg-yellow-600' %>
          <%= button_to 'Delete', branch_path(branch), method: :delete, data: { confirm: 'Are you sure?' }, class: 'bg-red-500 text-white px-2 py-1 rounded hover:bg-red-600' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
