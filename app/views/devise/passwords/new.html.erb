<section class="flex items-center justify-center sm:h-60vh h-80vh appearance-none">
  <div class="bg-white rounded-lg shadow-lg w-full max-w-screen-sm p-8 mt-[50%] md:mr-[35%] md:mt-[50%] lg:mr-[20%] lg:mt-[30%] xl:mr-[10%] xl:mt-[20%]"> 
    <h2 class="text-xl leading-tight font-Outfit font-semibold tracking-tight text-darkBlue md:text-2xl mb-3">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <div class="actions">
        <%= f.submit "Reset password", class: "w-full py-2 px-4 bg-lightGreen text-white font-semibold rounded-lg shadow-md hover:bg-darkBlue focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 mb-2" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>
