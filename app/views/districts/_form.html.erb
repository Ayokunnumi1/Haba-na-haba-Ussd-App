<%= form_with(model: district, class: "contents") do |form| %>
  <% if district.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(district.errors.count, "error") %> prohibited this district from being saved:</h2>

      <ul>
        <% district.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-4 flex flex-col" 
     data-controller='nested-form'
     data-nested-form-pattern-to-replace-with-index-value="COUNTY_INDEX"
  >
    <template data-nested-form-target="formTemplate">
      <%= form.fields_for(:counties, County.new, child_index: "COUNTY_INDEX") do |county_form| %>
      <%= render partial: 'counties/form', locals: { county_form: county_form } %>

      <% end %>
    </template>
    <div class="text-right">
      <span class="btn-primary cursor-pointer btn-sm" data-action="click->nested-form#addItem">Add county</span>
    </div>
    <div data-nested-form-target="itemsList">
      <%= form.fields_for(:counties) do |county_form| %>
        <%= render partial: 'sub_counties/form', locals: { county_form: } %>

      <% end %>
    </div>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
