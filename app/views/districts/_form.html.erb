<%= form_with(model: @district, local: true) do |district_form| %>
  <%= district_form.text_field :name %>
  <%= district_form.fields_for :counties do |county_form| %>
    <%= county_form.text_field :name %>
    <%= county_form.fields_for :sub_counties do |sub_county_form| %>
      <%= sub_county_form.text_field :name %>
      <%= sub_county_form.hidden_field :id %>
      <%= sub_county_form.check_box :_destroy %>
      <%= sub_county_form.label :_destroy, 'Remove SubCounty' %>
    <% end %>
  <% end %>
  <%= district_form.submit %>
<% end %>
