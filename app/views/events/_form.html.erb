<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation" class="bg-red-100 text-red-700 p-4 rounded-lg mb-4">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="max-w-4xl mx-auto bg-white rounded-lg shadow-lg p-6">
    <!-- Event name, start and end dates and times -->
    <div class="mb-4">
      <%= form.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :name, class: "w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    <div class="mb-4">
      <%= form.label :start_date, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.date_field :start_date, class: "w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    <div class="mb-4">
      <%= form.label :start_time, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.time_field :start_time, class: "w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    <div class="mb-4">
      <%= form.label :end_date, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.date_field :end_date, class: "w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    <div class="mb-4">
      <%= form.label :end_time, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.time_field :end_time, class: "w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <!-- District, county, sub-county -->
    <div class="mb-4">
      <%= form.label :district_id, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.collection_select :district_id, District.all, :id, :name, {}, class: "w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    <div class="mb-4 flex space-x-4">
      <div class="w-1/2">
        <%= form.label :county_id, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.collection_select :county_id, County.all, :id, :name, {}, class: "w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      <div class="w-1/2">
        <%= form.label :sub_county_id, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.collection_select :sub_county_id, SubCounty.all, :id, :name, {}, class: "w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
    </div>

    <!-- Additional Users Dropdown -->
    <div class="mb-4">
      <%= form.label :user_ids, "Select Users to Add", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.collection_select :user_ids, User.all, :id, :full_name, {}, { multiple: true, class: "w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
      <small class="text-gray-500">Hold Ctrl (Cmd) to select multiple users</small>
    </div>

    <!-- Submit button -->
    <div class="actions">
      <%= form.submit "Submit", class: "w-full py-2 px-4 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  </div>
<% end %>
