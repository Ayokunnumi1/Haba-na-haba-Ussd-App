<section class ="p-5">
<div class="bg-white border border-gray-200 rounded-lg shadow-md p-5 dark:bg-gray-800 dark:border-gray-700">
    <!-- Tab headers -->
    <div class="border-b border-gray-200 dark:border-gray-700">
        <ul class="flex flex-wrap -mb-px text-sm font-medium text-center text-gray-500 dark:text-gray-400">
            <li class="me-2">
                <button data-tab-target="profile" class="tab-btn inline-flex items-center justify-center p-4 border-b-2 border-transparent rounded-t-lg hover:text-gray-600 hover:border-gray-300 dark:hover:text-gray-300 group">
                    <svg class="w-4 h-4 me-2 text-gray-400 group-hover:text-gray-500 dark:text-gray-500 dark:group-hover:text-gray-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10 0a10 10 0 1 0 10 10A10.011 10.011 0 0 0 10 0Zm0 5a3 3 0 1 1 0 6 3 3 0 0 1 0-6Zm0 13a8.949 8.949 0 0 1-4.951-1.488A3.987 3.987 0 0 1 9 13h2a3.987 3.987 0 0 1 3.951 3.512A8.949 8.949 0 0 1 10 18Z"/>
                    </svg>Profile
                </button>
            </li>
            <li class="me-2">
                <button data-tab-target="dashboard" class="tab-btn inline-flex items-center justify-center p-4 border-b-2 border-transparent rounded-t-lg text-blue-600 border-blue-600 group">
                    <svg class="w-4 h-4 me-2 text-blue-600 dark:text-blue-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 18">
                        <path d="M6.143 0H1.857A1.857 1.857 0 0 0 0 1.857v4.286C0 7.169.831 8 1.857 8h4.286A1.857 1.857 0 0 0 8 6.143V1.857A1.857 1.857 0 0 0 6.143 0Zm10 0h-4.286A1.857 1.857 0 0 0 10 1.857v4.286C10 7.169 10.831 8 11.857 8h4.286A1.857 1.857 0 0 0 18 6.143V1.857A1.857 1.857 0 0 0 16.143 0Zm-10 10H1.857A1.857 1.857 0 0 0 0 11.857v4.286C0 17.169.831 18 1.857 18h4.286A1.857 1.857 0 0 0 8 16.143v-4.286A1.857 1.857 0 0 0 6.143 10Zm10 0h-4.286A1.857 1.857 0 0 0 10 11.857v4.286c0 1.026.831 1.857 1.857 1.857h4.286A1.857 1.857 0 0 0 18 16.143v-4.286A1.857 1.857 0 0 0 16.143 10Z"/>
                    </svg>Dashboard
                </button>
            </li>
            <!-- Additional tabs go here -->
        </ul>
    </div>

    <!-- Tab content -->
    <div class="tab-content mt-4">
        <div data-tab="profile" class="tab-panel hidden">Profile Content
        <h1>Requests for <%= @event.name %></h1>

<table class="table-auto w-full text-left border-collapse border border-gray-300">
  <thead>
    <tr>
      <th class="border border-gray-300 px-4 py-2">Name</th>
      <th class="border border-gray-300 px-4 py-2">Phone Number</th>
      <th class="border border-gray-300 px-4 py-2">Address</th>
      <th class="border border-gray-300 px-4 py-2">District</th>
      <th class="border border-gray-300 px-4 py-2">County</th>
      <th class="border border-gray-300 px-4 py-2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td class="border border-gray-300 px-4 py-2"><%= request.name %></td>
        <td class="border border-gray-300 px-4 py-2"><%= request.phone_number %></td>
        <td class="border border-gray-300 px-4 py-2"><%= request.residence_address %></td>
        <td class="border border-gray-300 px-4 py-2"><%= request.district&.name %></td>
        <td class="border border-gray-300 px-4 py-2"><%= request.county&.name %></td>
        <td class="border border-gray-300 px-4 py-2">
          <%= link_to 'Show', request_path(request), class: "text-blue-500 underline" %>
          <%= link_to 'Edit', edit_request_path(request), class: "text-yellow-500 underline" %>
          <%= link_to 'Delete', request_path(request), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-500 underline" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
        <div data-tab="dashboard" class="tab-panel">
          <%= render "events/request_form" %>        
          </div>
        <!-- Additional content goes here -->
    </div>
</div>
</section>