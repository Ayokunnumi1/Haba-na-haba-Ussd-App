<%= form_with(model: [@request, @family_beneficiary], url: request_family_beneficiary_path(@request), local: true, class: "space-y-6") do |f| %>
  <div class="grid grid-cols-2 gap-6">
    <div>
      <%= f.label :family_members, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :family_members, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <div>
      <%= f.label :male, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :male, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <div>
      <%= f.label :female, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :female, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <div>
      <%= f.label :children, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :children, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
  </div>
  <div class="grid grid-cols-2 gap-6">
    <div>
      <%= f.label :adult_age_range, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :adult_age_range, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <div>
      <%= f.label :children_age_range, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :children_age_range, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
  </div>
  <div class="grid grid-cols-2 gap-6">
    <div>
      <%= f.label :residence_address, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :residence_address, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <div>
      <%= f.label :village, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :village, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
  </div>
  <div class="grid grid-cols-2 gap-6">
    <div>
      <%= f.label :parish, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :parish, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <div>
      <%= f.label :phone_number, class: "block text-sm font-medium text-gray-700" %>
      <%= f.telephone_field :phone_number, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
  </div>
  <div class="grid grid-cols-2 gap-6">
    <div>
      <%= f.label :case_name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :case_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <div>
      <%= f.label :case_description, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :case_description, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
  </div>
  <div class="grid grid-cols-2 gap-6">
    <div>
      <%= f.label :fathers_name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :fathers_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <div>
      <%= f.label :mothers_name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :mothers_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
  </div>
  <div class="grid grid-cols-2 gap-6">
    <div>
      <%= f.label :fathers_occupation, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :fathers_occupation, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <div>
      <%= f.label :mothers_occupation, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :mothers_occupation, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
  </div>
  <div class="grid grid-cols-2 gap-6">
    <div>
      <%= f.label :number_of_meals_home, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :number_of_meals_home, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <div>
      <%= f.label :number_of_meals_school, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :number_of_meals_school, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <div class="sm:col-span-6">
      <%= f.label :basic_FEH, "Basic Food Eaten at Home", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :basic_FEH, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
    </div>
    <div class="sm:col-span-6">
      <%= f.label :basic_FES, "Basic Food Eaten at School", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :basic_FES, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
    </div>
    <div>
      <%= f.label :district_id, "District", class: "block font-medium text-gray-700" %>
      <%= f.collection_select :district_id, @districts, :id, :name, { prompt: "Select District" }, { id: 'district-select', class: 'form-select mt-1 block w-full border-gray-300 rounded-md shadow-sm', 'data-context-path': "requests/#{@family_beneficiary.request_id}/family_beneficiary" } %>
    </div>
    <div>
      <%= f.label :county_id, "County", class: "block font-medium text-gray-700" %>
      <%= f.collection_select :county_id, @counties, :id, :name, { prompt: "Select County" }, { id: 'county-select', class: 'form-select mt-1 block w-full border-gray-300 rounded-md shadow-sm', 'data-context-path': "requests/#{@family_beneficiary.request_id}/family_beneficiary" } %>
    </div>
    <div>
      <%= f.label :sub_county_id, "Sub-County", class: "block font-medium text-gray-700" %>
      <%= f.collection_select :sub_county_id, SubCounty.all, :id, :name, { prompt: "Select Sub-County" }, { id: 'sub-county-select', class: 'form-select mt-1 block w-full border-gray-300 rounded-md shadow-sm' } %>
    </div>
  </div>
  <div>
    <%= f.submit "Save", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>
