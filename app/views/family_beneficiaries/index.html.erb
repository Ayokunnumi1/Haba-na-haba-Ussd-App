<div class="p-4 md:p-8">
  <%= link_to(requests_path, class: "flex items-center text-sm sm:text-base text-gray-500 py-1 px-4 mb-4 rounded bg-gray-200 hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-400 transition duration-300 ease-in-out w-fit") do %>
    <i class="fa-solid fa-arrow-left"></i>
    <span class="ml-2 hidden lg:inline-block">Back</span>
  <% end %>
  <div class="flex justify-between items-center">
    <h2 class="text-xl lg:text-3xl font-bold flex-1 font-Outfit text-darkBlue">Family Beneficiaries</h2>
    <div class="flex-1 flex justify-end gap-2 lg:gap-4">
      <button class="toggle-button bg-lightGreen text-white py-1 px-2 rounded hover:bg-lime-500 lg:py-1 lg:px-4 " onclick="toggleFilter()">
        <span class="hidden mr-1 lg:inline-block">Filter</span>
        <i class="fa-solid fa-filter"></i>
      </button>
      <%= link_to family_beneficiaries_path, class: "clear-filter text-gray-500 py-1 px-2 bg-gray-100 border-2 border-gray-100 lg:py-1 lg:px-4 rounded hover:bg-gray-200" do %>
        <i class="fa-solid fa-arrows-rotate"></i> <span class="ml-1 hidden lg:inline-block">Clear Filters</span>
      <% end %>
    </div>
  </div>
  <div class="mb-6 font-Outfit text-[#5a607a]">
    <div class="filter-form space-y-4 mt-4 hidden">
      <%= form_with url: family_beneficiaries_path, method: :get, local: true, class: "space-y-4", data: { controller: "filter", action: "submit->filter#handleFilterSubmit" } do |form| %>
        <div class="flex flex-wrap gap-4">
          <div class="w-1/3 md:w-1/4 lg:w-1/6 flex-grow">
            <%= form.label :fathers_name, "Father", class: "block text-gray-700" %>
            <%= form.text_field :fathers_name, value: params[:fathers_name], class: "mt-1 block w-full border border-gray-300 rounded focus:ring-1 focus:ring-lightGreen focus:border-lightGreen" %>
          </div>
          <div class="w-1/3 md:w-1/4 lg:w-1/6 flex-grow">
            <%= form.label :mothers_name, "Mother", class: "block text-gray-700" %>
            <%= form.text_field :mothers_name, value: params[:mothers_name], class: "mt-1 block w-full border border-gray-300 rounded focus:ring-1 focus:ring-lightGreen focus:border-lightGreen" %>
          </div>
          <div class="w-1/3 md:w-1/4 lg:w-1/6 flex-grow">
            <%= form.label :case_name, "Case", class: "block text-gray-700" %>
            <%= form.text_field :case_name, value: params[:case_name], class: "mt-1 block w-full border border-gray-300 rounded focus:ring-1 focus:ring-lightGreen focus:border-lightGreen" %>
          </div>
          <div class="w-1/3 md:w-1/4 lg:w-1/6 flex-grow">
            <%= form.label :phone_number, "Phone", class: "block text-gray-700" %>
            <%= form.text_field :phone_number, value: params[:phone_number], class: "mt-1 block w-full border border-gray-300 rounded focus:ring-1 focus:ring-lightGreen focus:border-lightGreen" %>
          </div>
          <div class="w-1/3 md:w-1/4 lg:w-1/6 flex-grow">
            <%= form.label :min_member, "Min Member", class: "block text-gray-700" %>
            <%= form.number_field :min_member, value: params[:min_member], class: "mt-1 block w-full border border-gray-300 rounded focus:ring-1 focus:ring-lightGreen focus:border-lightGreen" %>
          </div>
          <div class="w-1/3 md:w-1/4 lg:w-1/6 flex-grow">
            <%= form.label :max_member, "Max Member", class: "block text-gray-700" %>
            <%= form.number_field :max_member, value: params[:max_member], class: "mt-1 block w-full border border-gray-300 rounded focus:ring-1 focus:ring-lightGreen focus:border-lightGreen" %>
          </div>
          <div class="w-1/3 md:w-1/4 lg:w-1/6 flex-grow">
            <%= form.label :district_id, "District", class: "block text-gray-700" %>
            <%= form.collection_select :district_id, @districts, :id, :name, { prompt: "Select District" }, { class: 'district-select form-select mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-1 focus:ring-lightGreen focus:border-lightGreen', 'data-context-path': "family_beneficiaries" } %>
          </div>
          <div class="w-1/3 md:w-1/4 lg:w-1/6 flex-grow">
            <%= form.label :county_id, "County", class: "block text-gray-700" %>
            <%= form.collection_select :county_id, @counties, :id, :name, { prompt: "Select County" }, { class: 'county-select form-select mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-1 focus:ring-lightGreen focus:border-lightGreen', 'data-context-path': "family_beneficiaries" } %>
          </div>
          <div class="w-1/3 md:w-1/4 lg:w-1/6 flex-grow">
            <%= form.label :sub_county_id, "Sub-County", class: "block text-gray-700" %>
            <%= form.collection_select :sub_county_id, @sub_counties, :id, :name, { prompt: "Select Sub-County" }, { class: 'sub-county-select form-select mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-1 focus:ring-lightGreen focus:border-lightGreen' } %>
          </div>
          <div class="w-1/3 md:w-1/4 lg:w-1/6 flex-grow">
            <%= form.label :branch_id, "Branch", class: "block text-gray-700" %>
            <%= form.collection_select :branch_id, @branches, :id, :name, { prompt: "Select branch" }, { class: 'form-select mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-1 focus:ring-lightGreen focus:border-lightGreen' } %>
          </div>
          <div class="w-1/3 md:w-1/4 lg:w-1/6 flex-grow">
            <%= form.label :start_date, "Start Date", class: "block text-gray-700" %>
            <%= form.date_field :start_date, value: params[:start_date], class: "mt-1 block w-full border border-gray-300 rounded focus:ring-1 focus:ring-lightGreen focus:border-lightGreen" %>
          </div>
          <div class="w-1/3 md:w-1/4 lg:w-1/6 flex-grow">
            <%= form.label :end_date, "End Date", class: "block text-gray-700" %>
            <%= form.date_field :end_date, value: params[:end_date], class: "mt-1 block w-full border border-gray-300 rounded focus:ring-1 focus:ring-lightGreen focus:border-lightGreen" %>
          </div>
          <div class="w-1/3 md:w-1/4 lg:w-1/6 flex-grow">
            <%= form.label :provided_food, "Provided", class: "block text-gray-700" %>
            <%= form.select :provided_food,
                            [["-- Select --", ""], ["Provided", "provided"], ["Not Provided", "not_provided"]],
                            {},
                            class: "form-select mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-1 focus:ring-lightGreen focus:border-lightGreen" %>
          </div>
        </div>
        <div class="mt-4">
          <%= form.submit "Filter", class: "inline-block bg-lightGreen text-white py-1 px-4 rounded hover:bg-lime-500" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="overflow-x-auto">
    <table class="min-w-full max-h-fit bg-white shadow-md rounded-lg border-x border-gray-100 data-table">
      <thead>
        <tr class="text-darkBlue bg-sky-50">
          <th class="px-6 py-3 text-left font-Outfit text-base font-bold tracking-wider w-[20%]">Father</th>
          <th class="px-6 py-3 text-left font-Outfit text-base font-bold tracking-wider w-[20%]">Mother</th>
          <th class="px-6 py-3 text-left font-Outfit text-base font-bold tracking-wider w-[5%]">Members</th>
          <th class="px-6 py-3 text-left font-Outfit text-base font-bold tracking-wider w-[20%]">Case</th>
          <th class="px-6 py-3 text-left font-Outfit text-base font-bold tracking-wider w-[10%]">Phone</th>
          <th class="px-6 py-3 text-left font-Outfit text-base font-bold tracking-wider w-[15%]">Event</th>
          <th class="px-6 py-3 text-center font-Outfit text-base font-bold tracking-wider w-[10%]">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @family_beneficiaries.each do |beneficiary| %>
          <tr class="border-b border-b-gray-100 hover:bg-gray-100">
            <td class="px-6 py-4 text-sm font-semibold font-Outfit text-[#5a607a]  w-[20%]"><%= beneficiary.fathers_name %></td>
            <td class="px-6 py-4 text-sm font-semibold font-Outfit text-[#5a607a]  w-[20%]"><%= beneficiary.mothers_name %></td>
            <td class="px-6 py-4 text-sm font-semibold font-Outfit text-[#5a607a] w-[5%]"><%= beneficiary.family_members %></td>
            <td class="px-6 py-4 text-sm font-semibold font-Outfit text-[#5a607a] w-[20%]"><%= beneficiary.case_name %></td>
            <td class="px-6 py-4 text-sm font-semibold font-Outfit text-[#5a607a] w-[10%]"><%= beneficiary.phone_number %></td>
            <td class="px-6 py-4 text-sm font-semibold font-Outfit text-[#5a607a] w-[15%]">
              <%= beneficiary.event&.name || 'N/A' %>
            </td>
            <td class="px-6 py-3 text-center text-sm font-Outfit text-[#5a607a] w-[10%]">
              <div class="relative">
                <button data-dropdown-toggle="dropdown-<%= beneficiary.id %>" class="text-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-300 border border-lightGreen rounded" type="button">
                  <div class="p-1 flex flex-row justify-center items-center  space-between">
                    <span class="hidden md:block lg:block mr-1" >Actions</span>
                    <i class="fa-solid fa-chevron-down"></i>
                  </div>
                </button>
                <div id="dropdown-<%= beneficiary.id %>" class="absolute right-0 mt-2 w-32 bg-white border rounded-lg shadow-lg z-10 hidden overflow-hidden font-Outfit font-semibold">
                  <%= link_to 'Details', family_beneficiary_path(beneficiary), class: 'block px-4 py-2 text-lightGreen hover:bg-gray-100' %>
                  <%= link_to 'Update', edit_request_family_beneficiary_path(beneficiary.request, beneficiary), class: 'block px-4 py-2 text-darkBlue hover:bg-gray-100' %>
                  <%= button_to 'Delete', family_beneficiary_path(beneficiary), method: :delete, data: { confirm: 'Are you sure?' }, class: 'block px-10 py-2 text-red-600 hover:bg-gray-100 text-center' %>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>