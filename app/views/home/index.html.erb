              <li>
                <%= link_to '#footer', class: 'block py-2 px-3 text-darkBlue rounded hover:bg-lightGreen hover:text-white lg:text-white lg:hover:bg-transparent lg:border-0 lg:hover:text-lightGreen lg:p-0 lg:active:text-lightGreen' do %>
                  Contact Us
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
      <div class="w-full mt-20 absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 flex flex-col justify-center items-center p-5">
        <div class="text-center text-white w-full font-Paprika">
          <h1 class="text-3.5xl sm:text-3.5xl md:text-5xl lg:text-5xl font-normal">Haba Na Haba</h1>
          <p class="text-xl sm:text-2xl md:text-3.8xl lg:text-5xl mt-2 font-normal">We are passionate hunger heroes</p>
          <p class="text-sm sm:text-base md:text-xl lg:text-xl mt-2 font-Outfit font-light">Together we can end hunger</p>
        </div>
      </div>
    </div>
  </section>
