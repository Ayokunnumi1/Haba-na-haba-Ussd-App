            <!-- Card 2 -->
            <div class="flex-grow block w-full h-full max-w-sm md:max-w-none md:w-1/2 aspect-w-1 aspect-h-1 p-6 md:p-4 bg-white border-2 border-lightGreen rounded-2xl shadow flex justify-center items-center ">
