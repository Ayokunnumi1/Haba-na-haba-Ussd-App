  <section class="max-w-screen-xl  mx-auto font-Outfit text-darkBlue p-4 flex flex-col justify-center items-center">
    <div class="flex flex-col md:flex-row items-center">
      <div class="w-full md:w-60%">
        <%= image_tag("littlepot_tablet.png", alt: "volunteer", class: "w-full h-auto") %>
      </div>
      <div class="w-full md:w-40% text-left mt-10 ml-2">
        <h2 class=" font-bold text-xl sm:text-2xl md:text-3.5xl lg:text-3.8xl lg:pb-4 ">Little by little the pot is filled</h2>
