<%= form_with(model: [@request, @individual_beneficiary], url: request_individual_beneficiary_path(@request), local: true, class: "space-y-6") do |form| %>
  <% if @individual_beneficiary.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
      <strong class="font-bold">Oops!</strong> <span class="block">Please fix the following errors:</span>
      <ul class="list-disc pl-5">
        <% @individual_beneficiary.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
    <div>
      <%= form.label :name, class: "block font-medium text-gray-700" %>
      <%= form.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div>
      <%= form.label :age, class: "block font-medium text-gray-700" %>
      <%= form.number_field :age, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div>
      <%= form.label :gender, class: "block font-medium text-gray-700" %>
      <%= form.select :gender, ['Male', 'Female'], class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div>
      <%= form.label :phone_number, class: "block font-medium text-gray-700" %>
      <%= form.text_field :phone_number, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div>
      <%= form.label :residence_address, class: "block font-medium text-gray-700" %>
      <%= form.text_field :residence_address, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div>
      <%= form.label :village, class: "block font-medium text-gray-700" %>
      <%= form.text_field :village, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div>
      <%= form.label :parish, class: "block font-medium text-gray-700" %>
      <%= form.text_field :parish, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div>
      <%= form.label :case_name, class: "block font-medium text-gray-700" %>
      <%= form.text_field :case_name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div>
      <%= form.label :case_description, class: "block font-medium text-gray-700" %>
      <%= form.text_area :case_description, rows: 4, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div>
      <%= form.label :fathers_name, class: "block font-medium text-gray-700" %>
      <%= form.text_field :fathers_name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div>
      <%= form.label :mothers_name, class: "block font-medium text-gray-700" %>
      <%= form.text_field :mothers_name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div>
      <%= form.label :district_id, "District", class: "block font-medium text-gray-700" %>
      <%= form.collection_select :district_id, @districts, :id, :name, { prompt: 'Select a district' }, { id: 'district-select', class: 'form-select', 'data-context-path': "requests/#{@individual_beneficiary.request_id}/individual_beneficiary" } %>
    </div>
    <div>
      <%= form.label :county_id, "County" %>
      <%= form.collection_select :county_id, @counties, :id, :name, { prompt: 'Select a county' }, { id: 'county-select', class: 'form-select', 'data-context-path': "requests/#{@individual_beneficiary.request_id}/individual_beneficiary" } %>
    </div>
    <div class="mb-4">
      <%= form.label :branch_id, "Branch" %>
      <%= form.collection_select :branch_id, @branches, :id, :name, { prompt: 'Select a branch' }, { class: 'form-select' } %>
    </div>
    <div>
      <%= form.label :provided_food, class: "block font-medium text-gray-700" %>
      <%= form.number_field :provided_food, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div>
      <%= form.label :sub_county_id, "Sub-County" %>
      <%= form.collection_select :sub_county_id, @sub_counties, :id, :name, { prompt: 'Select a sub-county' }, { id: 'sub-county-select', class: 'form-select' } %>
    </div>
  </div>
  <div class="pt-6">
    <%= form.submit class: "bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700" %>
  </div>
<% end %>
