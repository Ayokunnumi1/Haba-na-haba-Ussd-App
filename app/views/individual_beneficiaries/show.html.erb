<%= link_to(individual_beneficiaries_path, class: "flex items-center text-lg text-gray-500 py-2 px-4 rounded-full bg-gray-100 hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-400 transition duration-300 ease-in-out mb-6") do %>
  <i class="fa-solid fa-arrow-left text-xl"></i> <span class="ml-2">Back</span>
<% end %>

<div class="container mx-auto px-6 py-12">
  <div class="bg-gradient-to-tr from-gray-50 via-70% via-red-500 via-80% to-purple-700 to-90% text-white shadow-xl rounded-xl p-8 mb-8">
    <h2 class="text-4xl font-extrabold mb-6 text-center leading-tight">Individual Beneficiary Details</h2>

    <!-- Grid Layout for Information -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">

      <!-- Personal Info Section -->
      <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-2xl transition-all duration-300 ease-in-out">
        <h3 class="text-xl font-semibold text-gray-700 mb-4">Personal Information</h3>
        <div class="space-y-4">
          <div class="flex items-center gap-3">
            <i class="fa-solid fa-user text-lg text-indigo-500"></i>
            <p class="font-medium text-gray-700">Name</p>
            <p class="text-lg font-semibold text-[#5a607a]"><%= @individual_beneficiary.name %></p>
          </div>
          
          <div class="flex items-center gap-3">
            <i class="fa-solid fa-user-tag text-lg text-indigo-500"></i>
            <p class="font-medium text-gray-700">Sur Name</p>
            <p class="text-lg font-semibold text-[#5a607a]"><%= @individual_beneficiary.sur_name %></p>
          </div>

          <div class="flex items-center gap-3">
            <i class="fa-solid fa-calendar text-lg text-indigo-500"></i>
            <p class="font-medium text-gray-700">Age</p>
            <p class="text-lg font-semibold text-[#5a607a]"><%= @individual_beneficiary.age %></p>
          </div>

          <div class="flex items-center gap-3">
            <i class="fa-solid fa-genderless text-lg text-indigo-500"></i>
            <p class="font-medium text-gray-700">Gender</p>
            <p class="text-lg font-semibold text-[#5a607a]"><%= @individual_beneficiary.gender.capitalize %></p>
          </div>
        </div>
      </div>

      <!-- Address Section -->
      <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-2xl transition-all duration-300 ease-in-out">
        <h3 class="text-xl font-semibold text-gray-700 mb-4">Address Information</h3>
        <div class="space-y-4">
          <div class="flex items-center gap-3">
            <i class="fa-solid fa-map-marker-alt text-lg text-indigo-500"></i>
            <p class="font-medium text-gray-700">Residence Address</p>
            <p class="text-lg font-semibold text-[#5a607a]"><%= @individual_beneficiary.residence_address %></p>
          </div>
          
          <div class="flex items-center gap-3">
            <i class="fa-solid fa-home text-lg text-indigo-500"></i>
            <p class="font-medium text-gray-700">Village</p>
            <p class="text-lg font-semibold text-[#5a607a]"><%= @individual_beneficiary.village %></p>
          </div>

          <div class="flex items-center gap-3">
            <i class="fa-solid fa-church text-lg text-indigo-500"></i>
            <p class="font-medium text-gray-700">Parish</p>
            <p class="text-lg font-semibold text-[#5a607a]"><%= @individual_beneficiary.parish %></p>
          </div>
        </div>
      </div>

      <!-- Location Section -->
      <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-2xl transition-all duration-300 ease-in-out">
        <h3 class="text-xl font-semibold text-gray-700 mb-4">Location Information</h3>
        <div class="space-y-4">
          <div class="flex items-center gap-3">
            <i class="fa-solid fa-map text-lg text-indigo-500"></i>
            <p class="font-medium text-gray-700">District</p>
            <p class="text-lg font-semibold text-[#5a607a]"><%= @individual_beneficiary.district.name %></p>
          </div>

          <div class="flex items-center gap-3">
            <i class="fa-solid fa-map-pin text-lg text-indigo-500"></i>
            <p class="font-medium text-gray-700">County</p>
            <p class="text-lg font-semibold text-[#5a607a]"><%= @individual_beneficiary.county.name %></p>
          </div>

          <div class="flex items-center gap-3">
            <i class="fa-solid fa-location-arrow text-lg text-indigo-500"></i>
            <p class="font-medium text-gray-700">Sub-County</p>
            <p class="text-lg font-semibold text-[#5a607a]"><%= @individual_beneficiary.sub_county.name %></p>
          </div>
        </div>
      </div>

      <!-- Case Information Section -->
      <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-2xl transition-all duration-300 ease-in-out col-span-2 sm:col-span-3">
        <h3 class="text-xl font-semibold text-gray-700 mb-4">Case Information</h3>
        <div class="space-y-4">
          <div class="flex items-center gap-3">
            <i class="fa-solid fa-clipboard-list text-lg text-indigo-500"></i>
            <p class="font-medium text-gray-700">Case Name</p>
            <p class="text-lg font-semibold text-[#5a607a]"><%= @individual_beneficiary.case_name %></p>
          </div>

          <div class="flex items-center gap-3">
            <i class="fa-solid fa-briefcase text-lg text-indigo-500"></i>
            <p class="font-medium text-gray-700">Case Description</p>
            <p class="text-lg font-semibold text-[#5a607a]"><%= @individual_beneficiary.case_description %></p>
          </div>

          <div class="flex items-center gap-3">
            <i class="fa-solid fa-phone text-lg text-indigo-500"></i>
            <p class="font-medium text-gray-700">Phone Number</p>
            <p class="text-lg font-semibold text-[#5a607a]"><%= @individual_beneficiary.phone_number %></p>
          </div>
        </div>
      </div>
      
      <!-- Family Info Section -->
      <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-2xl transition-all duration-300 ease-in-out">
        <h3 class="text-xl font-semibold text-gray-700 mb-4">Family Information</h3>
        <div class="space-y-4">
          <div class="flex items-center gap-3">
            <i class="fa-solid fa-user-friends text-lg text-indigo-500"></i>
            <p class="font-medium text-gray-700">Father’s Name</p>
            <p class="text-lg font-semibold text-[#5a607a]"><%= @individual_beneficiary.fathers_name %></p>
          </div>

          <div class="flex items-center gap-3">
            <i class="fa-solid fa-user-mother text-lg text-indigo-500"></i>
            <p class="font-medium text-gray-700">Mother’s Name</p>
            <p class="text-lg font-semibold text-[#5a607a]"><%= @individual_beneficiary.mothers_name %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Edit and Destroy Actions -->
    <div class="mt-8 flex justify-end gap-6">
      <%= link_to 'Edit', edit_request_individual_beneficiary_path(@individual_beneficiary.request, @individual_beneficiary), class: 'bg-lightGreen text-white py-2 px-6 rounded-full hover:bg-lime-500 transition-all duration-200 ease-in-out' %>
      <%= button_to 'Destroy', individual_beneficiary_path(@individual_beneficiary), method: :delete, data: { confirm: 'Are you sure?' }, class: 'bg-red-600 text-white py-2 px-6 rounded-full hover:bg-red-700 transition-all duration-200 ease-in-out' %>
    </div>
  </div>
</div>
