<table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
  <thead>
    <tr>
      <!-- New 'Select' Column -->
      <td class="py-2 px-4 text-sm text-gray-600">
          <input type="checkbox" name="selected_inventories[]" class="form-checkbox">
        </td>
      <th class="py-2 px-4 border-b-2 flex border-gray-300 text-left text-sm font-semibold text-gray-700">
        Food Name
          <svg class="w-2 h-2 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="25" height="15" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="M5 7h14M5 12h14M5 17h14"/>
          </svg>
      </th>
      <th class="py-2 px-4 border-b-2 border-gray-300 text-left text-sm font-semibold text-gray-700">
        Donation Amount
      </th>
      <th class="py-2 px-4 border-b-2 border-gray-300 text-left text-sm font-semibold text-gray-700">
        Collection Date
      </th>
      <th class="py-2 px-4 border-b-2 border-gray-300 text-left text-sm font-semibold text-gray-700">
        Request
      </th>
      <th class="py-2 px-4 border-b-2 border-gray-300 text-left text-sm font-semibold text-gray-700">
        Actions
      </th>
    </tr>
  </thead>

  <tbody>
    <% @inventories.each do |inventory| %>
      <tr class="border-b">
        <!-- Checkbox in each row -->
        <td class="py-2 px-4 text-sm text-gray-600">
          <input type="checkbox" name="selected_inventories[]" value="<%= inventory.id %>" class="form-checkbox">
        </td>
        <td class="py-2 px-4 text-sm text-gray-600"><%= inventory.food_name %></td>
        <td class="py-2 px-4 text-sm text-gray-600"><%= number_to_human(inventory.amount) %></td>
        <td class="py-2 px-4 text-sm text-gray-600"><%= inventory.collection_date.strftime('%Y-%m-%d') %></td>
        <td class="py-2 px-4 text-sm text-gray-600">
          <%= link_to inventory.request.name, request_path(inventory.request) %>
        </td>
        <td class="py-2 px-4 text-sm text-gray-600">
          <%= link_to 'Show', inventory_path(inventory), class: "text-blue-500 hover:text-blue-700 mr-2" %>
          <%= link_to 'Edit', edit_request_inventory_path(inventory.request_id, inventory), class: "text-yellow-500 hover:text-yellow-700 mr-2" %>
          <%= button_to 'Delete', inventory_path(inventory), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-500 hover:text-red-700" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script>
    const modal = document.getElementById("modal");
    const openModalBtn = document.getElementById("filter-action");
    const closeModalBtn = document.getElementById("close-modal");

    openModalBtn.addEventListener("click", () => {
      modal.classList.remove("hidden");
    });

    closeModalBtn.addEventListener("click", () => {
      modal.classList.add("hidden");
    });

</script>
