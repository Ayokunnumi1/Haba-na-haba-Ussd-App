 const dropContentBulk = document.getElementById("dropdown-content-bulk");

 bulkActionsdropdownOpen.addEventListener("click", () => {
  bulkActionsdropdownOpen.classList.add('hidden')
  dropContentBulk.classList.remove('hidden')
  bulkActionsdropdownClose.classList.remove('hidden')
 })

 bulkActionsdropdownClose.addEventListener("click", () => {
