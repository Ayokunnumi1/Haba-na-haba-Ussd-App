              </div>
            </div>
            <!-- Modal Footer -->
            <div class="flex justify-end p-4 border-t border-gray-200 dark:border-gray-600">
              <%= f.submit "Apply Filter", class: "px-5 py-2.5 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 dark:focus:ring-blue-800" %>
