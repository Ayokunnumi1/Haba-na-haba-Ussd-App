<h1 class="text-2xl font-bold mb-4">Inventory List</h1>
<table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
  <thead>
    <tr>
      <th class="py-2 px-4 border-b-2 border-gray-300 text-left text-sm font-semibold text-gray-700">Donor Name</th>
      <th class="py-2 px-4 border-b-2 border-gray-300 text-left text-sm font-semibold text-gray-700">Food Name</th>
      <th class="py-2 px-4 border-b-2 border-gray-300 text-left text-sm font-semibold text-gray-700">Amount</th>
      <th class="py-2 px-4 border-b-2 border-gray-300 text-left text-sm font-semibold text-gray-700">Collection Date</th>
      <th class="py-2 px-4 border-b-2 border-gray-300 text-left text-sm font-semibold text-gray-700">Request</th>
      <th class="py-2 px-4 border-b-2 border-gray-300 text-left text-sm font-semibold text-gray-700">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @inventories.each do |inventory| %>
      <tr class="border-b">
        <td class="py-2 px-4 text-sm text-gray-600"><%= inventory.donor_name %></td>
        <td class="py-2 px-4 text-sm text-gray-600"><%= inventory.food_name %></td>
        <td class="py-2 px-4 text-sm text-gray-600"><%= number_to_human(inventory.amount) %></td>
        <td class="py-2 px-4 text-sm text-gray-600"><%= inventory.collection_date.strftime('%Y-%m-%d') %></td>
        <td class="py-2 px-4 text-sm text-gray-600"><%= link_to inventory.request.name, request_path(inventory.request) %></td>
        <td class="py-2 px-4 text-sm text-gray-600">
          <%= link_to 'Show', inventory_path(inventory), class: "text-blue-500 hover:text-blue-700 mr-2" %>
          <%= link_to 'Edit', edit_request_inventory_path(inventory.request_id, inventory), class: "text-yellow-500 hover:text-yellow-700 mr-2" %>
          <%= button_to 'Delete', inventory_path(inventory), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-500 hover:text-red-700" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
