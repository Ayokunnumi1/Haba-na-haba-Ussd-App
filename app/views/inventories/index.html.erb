            <thead class="bg-gray-50 font-bold">
              <tr>
                <td class="py-2 px-4 text-sm ">
                  <input type="checkbox" id="select-all" class="form-checkbox hidden md:flex rounded-md" aria-label="Select all items">
                </td>
                <%= sortable_table_header 'Food Name', :food_name, :inventories_path, class: 'inventories__row--header  py-3 px-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider' %>
