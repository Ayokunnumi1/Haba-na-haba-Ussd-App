<div class="max-w-4xl mx-auto mt-10 bg-white shadow-lg rounded-lg p-8 border border-gray-200 relative">
  <h2 class="text-2xl font-bold text-center mb-6 text-green-600">Inventory Information</h2>
  <!-- Main Container with Responsive Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 border border-4 border-green-500 md:rounded-3xl md:mx-44 p-2 relative">
    <!-- Green Line Divider for Desktop View Only -->
    <div class="hidden md:block absolute inset-y-0 left-1/2 w-0.5 bg-green-500 h-full top-0"></div>
    <!-- Content Blocks with Adjusted Padding for Mobile -->
    <div class="md:pr-6">
      <p class="text-sm font-bold text-green-700">Full name</p>
      <p class="text-gray-800"><%= @inventory.donor_name || 'N/A' %></p>
    </div>
    <div class="md:pl-6">
      <p class="text-sm font-bold text-green-700">Donation type</p>
      <p class="text-gray-800"><%= @inventory.donor_type || 'N/A' %></p>
    </div>
    <div class="md:pr-6">
      <p class="text-sm font-bold text-green-700">Address</p>
      <p class="text-gray-800"><%= @inventory.residence_address || 'N/A' %></p>
    </div>
    <div class="md:pl-6">
      <p class="text-sm font-bold text-green-700">Food name</p>
      <p class="text-gray-800"><%= @inventory.food_name || 'N/A' %></p>
    </div>
    <div class="md:pr-6">
      <p class="text-sm font-bold text-green-700">Phone number</p>
      <p class="text-gray-800"><%= @inventory.phone_number || 'N/A' %></p>
    </div>
    <div class="md:pl-6">
      <p class="text-sm font-bold text-green-700">Collection date</p>
      <p class="text-gray-800"><%= @inventory.collection_date || 'N/A' %></p>
    </div>
    <div class="md:pr-6">
      <p class="text-sm font-bold text-green-700">Registration no</p>
      <p class="text-gray-800"><%= @inventory.registration_no || 'N/A' %></p>
    </div>
    <div class="md:pl-6">
      <p class="text-sm font-bold text-green-700">Expiry date</p>
      <p class="text-gray-800"><%= @inventory.expire_date || 'N/A' %></p>
    </div>
    <div class="md:pr-6">
      <p class="text-sm font-bold text-green-700">Donation amount</p>
      <p class="text-gray-800"><%= @inventory.amount || 'N/A' %> kg</p>
    </div>
    <div class="md:pl-6">
      <p class="text-sm font-bold text-green-700">Head of the institution</p>
      <p class="text-gray-800"><%= @inventory.head_of_institution || 'N/A' %></p>
    </div>
    <div class="md:pr-6">
      <p class="text-sm font-bold text-green-700">Request submission date</p>
      <p class="text-gray-800"><%= @inventory.created_at.strftime('%d/%m/%Y') %></p>
    </div>
    <div class="md:pl-6">
      <p class="text-sm font-bold text-green-700">Request type</p>
      <p class="text-gray-800"><%= @inventory.request&.request_type.nil? || 'N/A' %></p>
    </div>
  </div>
  <div class="flex">
    <button   onclick="window.location.href='<%= inventories_path %>'" class="mt-6 flex justify-center mx-auto bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
      Back
    </button>
    <button  class="mt-6 flex justify-center mx-auto bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
      Edit
    </button>
    <button  onclick="if(confirm('Are you sure you want to delete this item?')) { window.location.href='<%= inventory_path(@inventory) %>' }" class="mt-6 flex justify-center mx-auto bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
      Delete
    </button>
  </div>
</div>
