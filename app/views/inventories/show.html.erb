<div class="max-w-4xl mx-auto mt-10 bg-white shadow-lg rounded-lg p-8 border border-gray-200 relative">
  <h2 class="text-2xl font-bold text-center mb-6 text-green-600">
    <% case @inventory.donation_type %>
    <% when 'food' %>
      Food Inventory Details
    <% when 'cash' %>
      Cash Inventory Details
    <% when 'cloth' %>
      Cloth Inventory Details
    <% when 'other_items' %>
      Other Items Inventory Details
    <% else %>
      Inventory Details
    <% end %>
  </h2>
  <!-- Main Container with Responsive Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 border border-4 border-green-500 md:rounded-3xl md:mx-44 p-2 relative">
    <!-- Green Line Divider for Desktop View Only -->
    <div class="hidden md:block absolute inset-y-0 left-1/2 w-0.5 bg-green-500 h-full top-0"></div>
    <!-- Content Blocks with Adjusted Padding for Mobile -->
    <% case @inventory.donation_type %>
    <% when 'food' %>
      <%= render 'inventories/show_inventories/food_inventory', inventory: @inventory %>
    <% when 'cash' %>
      <%= render 'inventories/show_inventories/cash_inventory', inventory: @inventory %>
    <% when 'cloth' %>
      <%= render 'inventories/show_inventories/cloth_inventory', inventory: @inventory %>
    <% when 'other_items' %>
      <%= render 'inventories/show_inventories/other_items_inventory', inventory: @inventory %>
    <% else %>
      <p>Invalid donation type.</p>
    <% end %>
  </div>
  <div class="flex justify-center space-x-4 mt-6">
    <%= link_to 'Back', inventories_path, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to 'Edit', edit_request_inventory_path(@inventory.request, @inventory), class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
    <%= button_to 'Delete', inventory_path(@inventory), method: :delete, data: { confirm: 'Are you sure you want to delete this item?' }, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>