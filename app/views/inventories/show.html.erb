<div class="max-w-4xl mx-auto mt-10">
  <h1 class="text-3xl font-bold text-center mb-6 text-gray-800">Inventory Details</h1>
  <div class="bg-white shadow-md rounded-lg p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <p class="text-lg font-semibold text-gray-700">Donor Name</p>
        <p class="text-gray-600"><%= @inventory.donor_name %></p>
      </div>
      <div>
        <p class="text-lg font-semibold text-gray-700">Donor Type</p>
        <p class="text-gray-600"><%= @inventory.donor_type %></p>
      </div>
      <div>
        <p class="text-lg font-semibold text-gray-700">Collection Date</p>
        <p class="text-gray-600"><%= @inventory.collection_date %></p>
      </div>
      <div>
        <p class="text-lg font-semibold text-gray-700">Food Name</p>
        <p class="text-gray-600"><%= @inventory.food_name %></p>
      </div>
      <div>
        <p class="text-lg font-semibold text-gray-700">Expire Date</p>
        <p class="text-gray-600"><%= @inventory.expire_date %></p>
      </div>
      <div>
        <p class="text-lg font-semibold text-gray-700">District</p>
        <p class="text-gray-600"><%= @inventory.district.name %></p>
      </div>
      <div>
        <p class="text-lg font-semibold text-gray-700">County</p>
        <p class="text-gray-600"><%= @inventory.county.name %></p>
      </div>
      <div>
        <p class="text-lg font-semibold text-gray-700">Sub-County</p>
        <p class="text-gray-600"><%= @inventory.sub_county.name %></p>
      </div>
      <div>
        <p class="text-lg font-semibold text-gray-700">Village Address</p>
        <p class="text-gray-600"><%= @inventory.village_address %></p>
      </div>
      <div>
        <p class="text-lg font-semibold text-gray-700">Residence Address</p>
        <p class="text-gray-600"><%= @inventory.residence_address %></p>
      </div>
      <div>
        <p class="text-lg font-semibold text-gray-700">Phone Number</p>
        <p class="text-gray-600"><%= @inventory.phone_number %></p>
      </div>
      <div>
        <p class="text-lg font-semibold text-gray-700">Parish</p>
        <p class="text-gray-600"><%= @inventory.parish %></p>
      </div>
      <div>
        <p class="text-lg font-semibold text-gray-700">Amount</p>
        <p class="text-gray-600"><%= @inventory.amount %></p>
      </div>
      <div>
        <p class="text-lg font-semibold text-gray-700">Head of Institution</p>
        <p class="text-gray-600"><%= @inventory.head_of_institution %></p>
      </div>
      <div>
        <p class="text-lg font-semibold text-gray-700">Registration No</p>
        <p class="text-gray-600"><%= @inventory.registration_no %></p>
      </div>
    </div>
    <div class="mt-8 flex justify-center">
      <%= link_to 'Edit Inventory', edit_request_inventory_path(@inventory.request_id, @inventory), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Back to Inventory List', inventories_path, class: 'ml-4 bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  </div>
</div>
