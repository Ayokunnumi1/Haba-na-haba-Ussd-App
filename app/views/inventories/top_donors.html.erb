<div class="max-w-7xl mx-auto p-6">
  <h2 class="text-3xl font-bold text-darkBlue mb-6">Top Donors</h2>
  <div class="bg-white shadow rounded-lg p-6 mb-6 hover:shadow-lg transition-all duration-300 ease-in-out">
    <%= form_with url: top_donors_path, method: :get, local: true, class: "grid gap-4 md:grid-cols-3 items-end" do |form| %>
      <div>
        <%= form.label :start_date, "Start Date", class: "block font-bold text-gray-700" %>
        <%= form.date_field :start_date, value: params[:start_date], class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-300 focus:ring-opacity-50" %>
      </div>
      <div>
        <%= form.label :end_date, "End Date", class: "block font-bold text-gray-700" %>
        <%= form.date_field :end_date, value: params[:end_date], class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-300 focus:ring-opacity-50" %>
      </div>
      <div>
        <%= form.submit "Filter", class: "w-full px-4 py-2 bg-lightGreen text-white rounded-md shadow hover:bg-lime-500 focus:outline-none focus:ring focus:ring-lightgreen focus:ring-opacity-50" %>
      </div>
    <% end %>
  </div>
  <div class="overflow-x-auto">
    <table class="table-auto w-full text-left border-collapse border border-gray-200 rounded-lg shadow">
      <thead class="bg-blue-100">
        <tr>
          <th class="px-4 py-2 text-gray-600 font-medium">Rank</th>
          <th class="px-4 py-2 text-gray-600 font-medium">Name</th>
          <th class="px-4 py-2 text-gray-600 font-medium">Phone Number</th>
          <th class="px-4 py-2 text-gray-600 font-medium">Donation Count</th>
        </tr>
      </thead>
      <tbody class="bg-white">
        <% @top_donors.each_with_index do |donor, index| %>
          <tr class="<%= index.even? ? 'bg-gray-50' : '' %> hover:bg-gray-100">
            <td class="border px-4 py-2 text-gray-700"><%= index + 1 %></td>
            <td class="border px-4 py-2 text-gray-700"><%= donor.donor_name.presence || "Unknown" %></td>
            <td class="border px-4 py-2 text-gray-700"><%= donor.phone_number.presence || "N/A" %></td>
            <td class="border px-4 py-2 text-gray-700"><%= donor.donation_count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
