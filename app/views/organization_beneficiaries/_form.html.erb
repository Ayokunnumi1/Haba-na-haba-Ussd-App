<%= form_with(model: [ @request, @organization_beneficiary ], url: request_organization_beneficiary_path(@request), local: true, class: "space-y-6") do |f| %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="flex flex-col">
      <%= f.label :organization_name, class: "font-semibold text-gray-700" %>
      <%= f.text_field :organization_name, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div class="flex flex-col">
      <%= f.label :male, class: "font-semibold text-gray-700" %>
      <%= f.number_field :male, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div class="flex flex-col">
      <%= f.label :female, class: "font-semibold text-gray-700" %>
      <%= f.number_field :female, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div class="flex flex-col">
      <%= f.label :adult_age_range, class: "font-semibold text-gray-700" %>
      <%= f.text_field :adult_age_range, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div class="flex flex-col">
      <%= f.label :children_age_range, class: "font-semibold text-gray-700" %>
      <%= f.text_field :children_age_range, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div class="flex flex-col">
      <%= f.label :district_id, "District", class: "font-semibold text-gray-700" %>
      <%= f.collection_select :district_id, @districts, :id, :name, { prompt: "Select District" }, { id: 'district-select', class: 'form-select mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500', 'data-context-path': "requests/#{@organization_beneficiary.request_id}/organization_beneficiary" }%>
    </div>
    <div class="flex flex-col">
      <%= f.label :county_id, "County", class: "font-semibold text-gray-700" %>
      <%= f.collection_select :county_id, @counties, :id, :name, { include_blank: "Select County" }, { id: 'county-select', class: 'form-select mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500', 'data-context-path': "requests/#{@organization_beneficiary.request_id}/family_beneficiary" } %>
    </div>
    <div class="flex flex-col">
      <%= f.label :sub_county_id, "Sub County", class: "font-semibold text-gray-700" %>
      <%= f.collection_select :sub_county_id, @sub_counties, :id, :name, { include_blank: "Select Sub County" }, { id: 'sub-county-select', class: 'form-select mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500' } %>
    </div>
    <div class="flex flex-col">
      <%= f.label :residence_address, class: "font-semibold text-gray-700" %>
      <%= f.text_area :residence_address, rows: 3, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div class="flex flex-col">
      <%= f.label :village, class: "font-semibold text-gray-700" %>
      <%= f.text_field :village, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div class="flex flex-col">
      <%= f.label :parish, class: "font-semibold text-gray-700" %>
      <%= f.text_field :parish, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div class="flex flex-col">
      <%= f.label :phone_number, class: "font-semibold text-gray-700" %>
      <%= f.text_field :phone_number, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div class="flex flex-col">
      <%= f.label :case_name, class: "font-semibold text-gray-700" %>
      <%= f.text_field :case_name, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div class="flex flex-col">
      <%= f.label :case_description, class: "font-semibold text-gray-700" %>
      <%= f.text_area :case_description, rows: 3, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div class="flex flex-col">
      <%= f.label :registration_no, class: "font-semibold text-gray-700" %>
      <%= f.text_field :registration_no, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div class="flex flex-col">
      <%= f.label :organization_no, class: "font-semibold text-gray-700" %>
      <%= f.text_field :organization_no, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div class="flex flex-col">
      <%= f.label :directors_name, class: "font-semibold text-gray-700" %>
      <%= f.text_field :directors_name, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div class="flex flex-col">
      <%= f.label :head_of_institution, class: "font-semibold text-gray-700" %>
      <%= f.text_field :head_of_institution, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div class="flex flex-col">
      <%= f.label :number_of_meals_home, class: "font-semibold text-gray-700" %>
      <%= f.number_field :number_of_meals_home, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div class="flex flex-col">
      <%= f.label :basic_FEH, class: "font-semibold text-gray-700" %>
      <%= f.text_field :basic_FEH, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div class="flex flex-col">
      <%= f.label :basic_FES, class: "font-semibold text-gray-700" %>
      <%= f.text_field :basic_FES, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div>
      <%= f.label :provided_food, class: "block font-medium text-gray-700" %>
      <%= f.number_field :provided_food, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
  </div>
  <div class="flex justify-end">
    <%= f.submit "Save", class: "py-2 px-4 bg-indigo-600 text-white rounded-md shadow-sm hover:bg-indigo-700 focus:ring focus:ring-indigo-500 focus:ring-opacity-50" %>
  </div>
<% end %>
