<section class="font-Outfit">
  <div class="flex w-full justify-center gap-3 items-stretch px-2">
    <!-- Card 1 -->
    <div class="flex-1 p-2 h-auto">
      <div class="px-3 py-4 h-full sm:px-4 sm:py-6 rounded-xl bg-lightGreen shadow-lg transition-shadow hover:shadow-2xl flex flex-col items-start space-y-3 sm:space-y-6">
        <div class="mb-2 sm:mb-4 bg-gradient-to-r from-green-400 to-green-600 p-2 rounded-full">
          <i class="fa-regular fa-folder text-white text-lg sm:text-xl lg:text-2xl"></i>
        </div>
        <div class="flex flex-row flex-warp gap-4 sm:flex-row sm:gap-x-4 md:gap-x-6 lg:gap-x-8 w-full text-lightGray">
          <div class="flex flex-col items-start">
            <p class="text-xs sm:text-sm md:text-base lg:text-lg tracking-wide">Total</p>
            <p class="pt-1 text-lg sm:text-xl md:text-2xl lg:text-3xl font-semibold tracking-wide"><%= @request_count %></p>
          </div>
          <div class="flex flex-col items-start">
            <p class="text-xs sm:text-sm md:text-base lg:text-lg tracking-wide">Approved</p>
            <p class="pt-1 text-lg sm:text-xl md:text-2xl lg:text-3xl font-semibold tracking-wide"><%= @approved_request %></p>
          </div>
          <div class="flex flex-col items-start">
            <p class="text-xs sm:text-sm md:text-base lg:text-lg tracking-wide">Assigned</p>
            <p class="pt-1 text-lg sm:text-xl md:text-2xl lg:text-3xl font-semibold tracking-wide"><%= @not_assigned_request %></p>
          </div>
          <div class="flex flex-col items-start">
            <p class="text-xs sm:text-sm md:text-base lg:text-lg tracking-wide">Rejected</p>
            <p class="pt-1 text-lg sm:text-xl md:text-2xl lg:text-3xl font-semibold tracking-wide"><%= @rejected_request %></p>
          </div>
        </div>
      </div>
    </div>
    <!-- Card 2 -->
    <div class="flex-1 p-2">
      <div class="px-3 h-full flex flex-col py-4 flex sm:px-4 sm:py-6 rounded-xl bg-white shadow-lg transition-shadow hover:shadow-2xl flex flex-row md:flex-col items-start space-y-3 sm:space-y-6">
        <div class="mb-2 sm:mb-4 bg-gradient-to-r from-gray-400 to-gray-600 p-2 rounded-full">
          <i class="fa-solid fa-user-group text-white text-lg sm:text-xl lg:text-2xl"></i>
        </div>
        <div class="donations-container">
          <div class="flex flex-row sm:flex-row sm:gap-x-4 md:gap-x-6 lg:gap-x-8 w-full text-black">
            <div class="flex flex-col items-start">
              <div>
                <p class="text-gray-600 text-sm md:text-base lg:text-lg tracking-wide">Food</p>
                <p class="pt-1 text-lg sm:text-xl md:text-2xl lg:text-3xl font-semibold tracking-wide"><%= @food_request_count %></p>
              </div>
            </div>
            <div class="donations container flex flex-row flex-wrap">
              <div class="flex flex-col items-start">
                <p class="text-xs sm:text-sm md:text-base lg:text-lg tracking-wide">Food</p>
                <p class="pt-1 text-lg sm:text-xl md:text-2xl lg:text-3xl font-semibold tracking-wide"><%= @food_donation_count %></p>
              </div>
              <div class="flex flex-col items-start">
                <p class="text-xs sm:text-sm md:text-base lg:text-lg tracking-wide">Cash</p>
                <p class="pt-1 text-lg sm:text-xl md:text-2xl lg:text-3xl font-semibold tracking-wide"><%= @cash_donation_count %></p>
              </div>
              <div class="flex flex-col items-start">
                <p class="text-xs sm:text-sm md:text-base lg:text-lg tracking-wide">Cloth</p>
                <p class="pt-1 text-lg sm:text-xl md:text-2xl lg:text-3xl font-semibold tracking-wide"><%= @cloth_donation_count %></p>
              </div>
              <div class="flex flex-col items-start">
                <p class="text-xs sm:text-sm md:text-base lg:text-lg tracking-wide">Other</p>
                <p class="pt-1 text-lg sm:text-xl md:text-2xl lg:text-3xl font-semibold tracking-wide"><%= @other_donation_count %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>