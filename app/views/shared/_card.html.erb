<div class="flex flex-col <%= variant_class %> items-center bg-transparent md:gap-4 md:p-3">
  <div class="mb-4 <%= image_container_class %>">
    <%= image_tag svg_icon_path, alt: title, class: "w-16 h-16" %>
  </div>
  <div class="text-center <%= text_alignment_class %> flex-grow">
    <h3 class="font-bold text-sm lg:text-xl"><%= title %></h3>
    <p class="font-light text-xs mt-2 lg:text-lg"><%= description %></p>
    <div class="font-bold text-base mt-4 hover:text-lightGreen <%= action_text_class %>"><%= action_text %></div>
  </div>
</div>