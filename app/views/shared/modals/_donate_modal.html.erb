<!-- Main Modal -->
<div id="donateModal" tabindex="-1" aria-hidden="true" class="hidden fixed inset-0 z-50 flex items-center justify-center">
    <!-- Overlay -->
    <div class="fixed inset-0 bg-black bg-opacity-50"></div>
    
    <div class="relative p-4 w-full max-w-2xl max-h-full z-10">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
            <!-- Modal header -->
            <div class="flex items-center justify-between p-4 md:p-5">
            
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" onclick="toggleModal('donateModal')">
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                    </svg>
                    <span class="sr-only">Close modal</span>
                </button>
            </div>
            <div class="flex flex-col uppercase shadow-md p-4">
                <p class="text-xxs font-semibold text-lightGreen  text-center">Give Hope, Share Love</p>
                <h3 class="text-xl font-semibold text-lightGreen text-center ">
                Your Donation Makes a Difference
                </h3>
                </div>
            
            <!-- Modal Body - Step 1 -->
            <div id="step-1" class="modal-step p-4 md:p-5 space-y-4 overflow-y-auto max-h-[75vh]">
                <label class="block text-sm font-medium text-gray-700">Full Name <span class="text-red-500">*</span></label>
                <div class="flex gap-2">
                    <input type="text" required placeholder="First Name" class="w-full p-2 border border-gray-300 rounded-md"/>
                    <input type="text" required placeholder="Last Name" class="w-full p-2 border border-gray-300 rounded-md"/>
                </div>

                <div class="flex gap-2">
                    <div class="w-1/2">
                        <label class="block text-sm font-medium text-gray-700">Phone Number <span class="text-red-500">*</span></label>
                        <input type="tel" required placeholder="Enter phone number" class="w-full p-2 border border-gray-300 rounded-md"/>
                    </div>
                    <div class="w-1/2">
                        <label class="block text-sm font-medium text-gray-700">Donor Type</label>
                        <select required class="w-full p-2 border border-gray-300 rounded-md">
                            <option value="" disabled selected>Select type</option>
                            <option>Individual</option>
                            <option>Family</option>
                            <option>Organization</option>
                        </select>
                    </div>
                </div>

                <label class="block text-sm font-medium text-gray-700">Address</label>
                <input type="text" required placeholder="Street Address" class="w-full p-2 border border-gray-300 rounded-md"/>
                <div class="flex gap-2">
                    <select required class="w-full p-2 border border-gray-300 rounded-md">
                        <option value="" disabled selected>District</option>
                        <option  >District</option>
                        <!-- Add district options here -->
                    </select>
                    <select required class="w-full p-2 border border-gray-300 rounded-md">
                        <option value="" disabled selected>County</option>
                        <option  >District</option>
                        <!-- Add county options here -->
                    </select>
                </div>
                <div class="flex gap-2">
                    <input type="text" required placeholder="Sub-county" class="w-full p-2 border border-gray-300 rounded-md"/>
                    <input type="text" required placeholder="Village" class="w-full p-2 border border-gray-300 rounded-md"/>
                </div>
                <input type="text" required placeholder="Parish" class="w-full p-2 border border-gray-300 rounded-md"/>

                <!-- Next Button -->
                <button type="button" onclick="showNextStep('step-2')" class="px-4 py-2 bg-lightGreen text-white rounded-md hover:bg-darkBlue font-Outfit w-[100%] align-center">Next</button>
            </div>

            <!-- Modal Body - Step 2 -->
            <div id="step-2" class="modal-step p-4 md:p-5 space-y-4 overflow-y-auto max-h-[75vh] hidden">
                <input type="text" placeholder="Registration No." class="w-full p-2 border border-gray-300 rounded-md"/>
                <input type="text" placeholder="Head of the Institution" class="w-full p-2 border border-gray-300 rounded-md"/>

                <div class="flex justify-between">
                    <button type="button" onclick="showPreviousStep('step-1')" class="px-4 py-2 bg-darkBlue text-white  font-Outfit w-[40%] rounded-md">Back</button>
                    <button type="button" onclick="showNextStep('step-3')" class="px-4 py-2 bg-lightGreen text-white rounded-md hover:bg-darkBlue font-Outfit w-[40%]">Next</button>
                </div>
            </div>

            <!-- Modal Body - Step 3 -->
            <div id="step-3" class="modal-step p-4 md:p-5 space-y-4 overflow-y-auto max-h-[75vh] hidden">
                <input type="text" placeholder="Donation Type" class="w-full p-2 border border-gray-300 rounded-md"/>
                <input type="text" placeholder="Food Name" class="w-full p-2 border border-gray-300 rounded-md"/>

                <label class="block text-sm font-medium text-gray-700">Collection & Expiry Date</label>
                <div class="flex gap-2">
                    <input type="date" class="w-full p-2 border border-gray-300 rounded-md"/>
                    <input type="date" class="w-full p-2 border border-gray-300 rounded-md"/>
                </div>

                <input type="number" placeholder="Donation Amount" class="w-full p-2 border border-gray-300 rounded-md"/>

                <label class="block text-sm font-medium text-gray-700">How Did You Hear About Us?</label>
                <select class="w-full p-2 border border-gray-300 rounded-md">
                    <option value="" disabled selected>Select source</option>
                    <!-- Add options here -->
                </select>

                <div class="flex justify-between">
                    <button type="button" onclick="showPreviousStep('step-2')" class="px-4 py-2 bg-yellow-500 text-white rounded-md hover:bg-yellow-600">Back</button>
                    <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600">Submit</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- JavaScript -->
<script>
    function toggleModal(id) {
        document.getElementById(id).classList.toggle('hidden');
    }

    function showNextStep(stepId) {
        // Get the current step element
        const currentStep = document.querySelector('.modal-step:not(.hidden)');
        
        // Find all required inputs in the current step
        const requiredInputs = currentStep.querySelectorAll('input[required], select[required]');
        let allFilled = true;

        // Check if all required fields are filled
        requiredInputs.forEach(input => {
            if (!input.value) {
                allFilled = false;
                // Optionally, add a visual indication for missing fields
                input.classList.add('border-red-500');
            } else {
                // Remove any previous indication if filled
                input.classList.remove('border-red-500');
            }
        });

        if (allFilled) {
            // Hide all steps and show the next step if validation passed
            document.querySelectorAll('.modal-step').forEach(el => el.classList.add('hidden'));
            document.getElementById(stepId).classList.remove('hidden');
        } else {
            alert("Please fill out all required fields before proceeding.");
        }
    }

    function showPreviousStep(stepId) {
        document.querySelectorAll('.modal-step').forEach(el => el.classList.add('hidden'));
        document.getElementById(stepId).classList.remove('hidden');
    }
</script>
