<!-- Main Modal -->
<div id="requestModal" tabindex="-1" aria-hidden="true" class="hidden fixed inset-0 z-50 flex items-center justify-center">
    <!-- Overlay -->
    <div class="fixed inset-0 bg-black bg-opacity-50"></div>
    
    <div class="relative p-4 w-full max-w-2xl max-h-full z-10">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
            <!-- Modal header -->
            <div class="flex items-center justify-between p-4 md:p-5">
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" onclick="toggleUniqueModal('requestModal')">
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                    </svg>
                    <span class="sr-only">Close modal</span>
                </button>
            </div>
            <div class="flex flex-col uppercase shadow-md p-4">
                <p class="text-xxs font-semibold text-lightGreen text-center">Request a meal, nourish your day</p>
                <h3 class="text-xl font-semibold text-lightGreen text-center">weâ€™re here to help!</h3>
            </div>

            <!-- Modal Body - Step 1 -->
            <div id="uniqueReqStep1" class="unique-modal-step p-4 md:p-5 space-y-4 overflow-y-auto max-h-[75vh]">
                <!-- Beneficiary Type Dropdown -->
                <label class="block text-sm font-medium text-gray-700">Beneficiary Type <span class="text-red-500">*</span></label>
                <select required id="uniqueBeneficiaryType" onchange="handleUniqueBeneficiaryChange()" class="w-full p-2 border border-gray-300 rounded-md">
                    <option value="" disabled selected>Select Beneficiary Type</option>
                    <option value="Individual">Individual</option>
                    <option value="Family">Family</option>
                    <option value="Organization">Organization</option>
                </select>

                <div class="flex gap-2">
                    <div class="w-1/2">
                        <label class="block text-sm font-medium text-gray-700">Phone Number <span class="text-red-500">*</span></label>
                        <input type="tel" required placeholder="Enter phone number" class="w-full p-2 border border-gray-300 rounded-md"/>
                    </div>
                    <div class="w-1/2" id="uniqueOrganizationNameField" style="display: none;">
                        <label class="block text-sm font-medium text-gray-700">Organization Name</label>
                        <input type="text" placeholder="Enter organization name" class="w-full p-2 border border-gray-300 rounded-md"/>
                    </div>
                </div>

                <label class="block text-sm font-medium text-gray-700">Address</label>
                <input type="text" required placeholder="Street Address" class="w-full p-2 border border-gray-300 rounded-md"/>
                
                <div class="flex gap-2">
                    <select required class="w-full p-2 border border-gray-300 rounded-md">
                        <option value="" disabled selected>District</option>
                        <option>District</option>
                        <!-- Add district options here -->
                    </select>
                    <select required class="w-full p-2 border border-gray-300 rounded-md">
                        <option value="" disabled selected>County</option>
                        <option>County</option>
                        <!-- Add county options here -->
                    </select>
                </div>
                
                <div class="flex gap-2">
                    <input type="text" required placeholder="Sub-county" class="w-full p-2 border border-gray-300 rounded-md"/>
                    <input type="text" required placeholder="Village" class="w-full p-2 border border-gray-300 rounded-md"/>
                </div>
                <input type="text" required placeholder="Parish" class="w-full p-2 border border-gray-300 rounded-md"/>

                <!-- Next Button -->
                <button type="button" onclick="showUniqueNextStep('uniqueReqStep')" class="px-4 py-2 bg-lightGreen text-white rounded-md hover:bg-darkBlue font-Outfit w-[100%] align-center">Next</button>
            </div>

            <!-- Modal Body - Step 2 -->
            <div id="uniqueReqStep2" class="unique-modal-step p-4 md:p-5 space-y-4 overflow-y-auto max-h-[75vh] hidden">
                <input type="text" placeholder="Registration No." class="w-full p-2 border border-gray-300 rounded-md"/>
                <input type="text" placeholder="Head of the Institution" class="w-full p-2 border border-gray-300 rounded-md"/>

                <div class="flex justify-between">
                    <button type="button" onclick="showUniquePreviousStep('uniqueReqStep1')" class="px-4 py-2 bg-darkBlue text-white font-Outfit w-[40%] rounded-md">Back</button>
                    <button type="button" onclick="showUniqueNextStep('uniqueReqStep3')" class="px-4 py-2 bg-lightGreen text-white rounded-md hover:bg-darkBlue font-Outfit w-[40%]">Next</button>
                </div>
            </div>

            <!-- Modal Body - Step 3 -->
            <div id="uniqueReqStep3" class="unique-modal-step p-4 md:p-5 space-y-4 overflow-y-auto max-h-[75vh] hidden">
                <!-- Donation fields go here -->
                <div class="flex justify-between">
                    <button type="button" onclick="showUniquePreviousStep('uniqueReqStep2')" class="px-4 py-2 bg-darkBlue text-white rounded-md w-[40%]">Back</button>
                    <button type="submit" class="w-[40%] px-4 py-2 bg-lightGreen text-white rounded-md">Submit</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- JavaScript -->
<script>
    function toggleUniqueModal(id) {
        document.getElementById(id).classList.toggle('hidden');
    }

    function handleUniqueBeneficiaryChange() {
        const beneficiaryType = document.getElementById("uniqueBeneficiaryType").value;
        const organizationNameField = document.getElementById("uniqueOrganizationNameField");
        const nextButton = document.querySelector("#uniqueReqStep1 button[type='button']");
        
        if (beneficiaryType === "Organization") {
            organizationNameField.style.display = "block";
            nextButton.setAttribute("onclick", "showUniqueNextStep('uniqueReqStep2')");
        } else {
            organizationNameField.style.display = "none";
            nextButton.setAttribute("onclick", "showUniqueNextStep('uniqueReqStep3')");
        }
    }

    function showUniqueNextStep(stepId) {
        const currentStep = document.querySelector('.unique-modal-step:not(.hidden)');
        const requiredInputs = currentStep.querySelectorAll('input[required], select[required]');
        let allFilled = true;

        requiredInputs.forEach(input => {
            if (!input.value) {
                allFilled = false;
                input.classList.add('border-red-500');
            } else {
                input.classList.remove('border-red-500');
            }
        });

        if (allFilled) {
            document.querySelectorAll('.unique-modal-step').forEach(el => el.classList.add('hidden'));
            document.getElementById(stepId).classList.remove('hidden');
        } else {
            alert("Please fill out all required fields before proceeding.");
        }
    }

    function showUniquePreviousStep(stepId) {
        document.querySelectorAll('.unique-modal-step').forEach(el => el.classList.add('hidden'));
        document.getElementById(stepId).classList.remove('hidden');
    }
</script>
