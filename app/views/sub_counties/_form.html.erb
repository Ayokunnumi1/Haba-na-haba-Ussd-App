<%= form_with(model: sub_counties, class: "contents") do |form| %>
  <% if sub_counties.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(sub_counties.errors.count, "error") %> prohibited this sub_counties from being saved:</h2>

      <ul>
        <% sub_counties.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 4, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :county_id %>
    <%
      options = County.includes(:district).map { |c| 
        ["#{c.district.name} - #{c.name}", c.id]
      }.sort
    %>
    <%= form.select :county_id,  options, { required: :true }, class: "input-primary" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
