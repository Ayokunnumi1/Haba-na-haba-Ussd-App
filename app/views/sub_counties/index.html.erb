<h1 class="text-2xl font-bold mb-6">All SubCounties</h1>
<div class="mb-4">
  <%= link_to 'Create SubCounty', new_sub_county_path, class: 'bg-blue-500 text-white px-4 py-2 rounded-lg shadow hover:bg-blue-600 focus:outline-none' %>
</div>
<table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-lg">
  <thead class="bg-gray-50">
    <tr>
      <th class="py-2 px-4 border-b border-gray-200 text-left text-gray-600 font-semibold">Name</th>
      <th class="py-2 px-4 border-b border-gray-200 text-left text-gray-600 font-semibold">County</th>
      <th class="py-2 px-4 border-b border-gray-200 text-left text-gray-600 font-semibold">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @sub_counties.each do |sub_county| %>
      <tr class="border-b hover:bg-gray-50">
        <td class="py-2 px-4 text-gray-700"><%= sub_county.name %></td>
        <td class="py-2 px-4 text-gray-700"><%= sub_county.county.name %></td>
        <td class="py-2 px-4">
          <%= link_to 'Show', sub_county_path(sub_county), class: 'bg-blue-500 text-white px-2 py-1 rounded hover:bg-blue-600' %>
          <%= link_to 'Edit', edit_sub_county_path(sub_county), class: 'bg-yellow-500 text-white px-2 py-1 rounded hover:bg-yellow-600' %>
          <%= button_to 'Delete', sub_county_path(sub_county), method: :delete, data: { confirm: 'Are you sure?' }, class: 'bg-red-500 text-white px-2 py-1 rounded hover:bg-red-600' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
