<div class="max-w-4xl mx-auto bg-white p-6 rounded-lg shadow-lg">
  <h1 class="text-3xl font-bold text-gray-800 mb-4">
    SubCounty: <%= @sub_county.name %>
  </h1>
  <div class="mb-6">
    <h2 class="text-xl font-semibold text-gray-700">Details</h2>
    <ul class="list-disc pl-6 mt-2 text-gray-600">
      <li><strong>County:</strong> <%= @sub_county.county.name %></li>
      <li><strong>District:</strong> <%= @sub_county.county.district.name %></li>
    </ul>
  </div>
  <div class="flex space-x-4 mt-6">
    <%= link_to 'Edit', edit_sub_county_path(@sub_county), class: 'bg-blue-500 text-white px-4 py-2 rounded-lg shadow hover:bg-blue-600' %>
    <%= link_to 'Back to SubCounties', sub_counties_path, class: 'bg-gray-500 text-white px-4 py-2 rounded-lg shadow hover:bg-gray-600' %>
    <%= button_to 'Delete', sub_county_path(@sub_county), method: :delete, data: { confirm: 'Are you sure?' }, class: 'bg-red-500 text-white px-4 py-2 rounded-lg shadow hover:bg-red-600' %>
  </div>
</div>
