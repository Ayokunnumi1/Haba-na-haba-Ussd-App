<div class="flex justify-center items-center h-[90%] w-full">
  <div class="max-w-lg w-full bg-white shadow-lg rounded-lg p-6 font-Outfit">
    <!-- SubCounty name as header, aligned to the left -->
    <h2 class="text-3xl font-bold text-gray-800 mb-4 text-center">
      SubCounty: <%= @sub_county.name %>
    </h2>

    <!-- Details section with left-aligned heading -->
    <div class="mb-6">
      <h2 class="text-xl font-semibold text-gray-700 text-center">Details</h2>
      <ul class="list-none pl-6 mt-2 text-gray-600 text-center">
        <li><strong>County:</strong> <%= @sub_county.county.name %></li>
        <li><strong>District:</strong> <%= @sub_county.county.district.name %></li>
      </ul>
    </div>

    <!-- Action buttons -->
    <div class="flex justify-center space-x-4 mt-6">
      <%= link_to 'Edit', edit_sub_county_path(@sub_county), class: 'bg-lightGreen text-white px-4 py-2 rounded-lg shadow hover:bg-darkBlue' %>
      <%= link_to 'Back', sub_counties_path, class: 'bg-darkBlue text-white px-4 py-2 rounded-lg shadow hover:bg-gray-700' %>
    </div>
  </div>
</div>
