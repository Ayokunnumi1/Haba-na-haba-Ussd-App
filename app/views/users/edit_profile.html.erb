<div class="max-w-4xl mx-auto p-6 bg-white shadow-md rounded-md">
  <h2 class="text-2xl font-Outfit font-semibold text-gray-700 mb-6">Account Setting</h2>
  
  <%= form_with(model: @user, url: update_profile_user_path(@user), local: true, html: { multipart: true }) do |form| %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Profile Image Section -->
    <div class="col-span-1 flex flex-col items-center">
<!-- Image Container with Upload and Delete Icons -->
<div class="relative w-32 h-32 rounded-lg overflow-hidden bg-gray-200 border border-gray-300 flex items-center justify-center">
  <!-- Display the User Image if Attached, Otherwise a Placeholder Icon -->
  <% if @user.image.attached? %>
    <%= image_tag @user.image, class: "object-cover w-full h-full rounded-lg" %>
  <% else %>
    <%= content_tag(:span, '', class: "fa fa-user text-gray-400 text-6xl flex items-center justify-center") %>
  <% end %>
  
  <!-- Icons Overlay for Upload and Delete -->
  <div class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-50 opacity-0 hover:opacity-100 transition-opacity">
    <!-- Upload Icon -->
    <%= form_with(model: @user, url: update_profile_user_path(@user), local: true, html: { multipart: true }) do |form| %>
      <%= form.file_field :image, class: "hidden", id: "upload-image" %>
      <label for="upload-image" class="cursor-pointer text-white text-2xl mx-2">
        <i class="fa fa-upload"></i>
      </label>
    <% end %>

    <!-- Delete Icon -->
    <%= link_to update_profile_user_path(@user, user: { remove_image: true }), method: :patch, class: "text-white text-2xl mx-2" do %>
      <i class="fa fa-trash"></i>
    <% end %>
  </div>
</div>
</div>

      <!-- Personal Information Section -->
      <div class="col-span-1">
        <!-- First Name -->
        <div class="mb-4">
          <%= form.label :first_name, "First Name", class: "block text-gray-700" %>
          <%= form.text_field :first_name, class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400" %>
        </div>

        <!-- Last Name -->
        <div class="mb-4">
          <%= form.label :last_name, "Last Name", class: "block text-gray-700" %>
          <%= form.text_field :last_name, class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400" %>
        </div>

        <!-- Email -->
        <div class="mb-4">
          <%= form.label :email, "Email", class: "block text-gray-700" %>
          <%= form.email_field :email, class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400" %>
        </div>

        <!-- Password -->
        <div class="mb-4">
          <%= form.label :password, "Password", class: "block text-gray-700" %>
          <%= form.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400" %>
          <p class="text-sm text-gray-500">(Leave blank if you don't want to change it)</p>
        </div>

        <!-- Confirm Password -->
        <div class="mb-4">
          <%= form.label :password_confirmation, "Confirm Password", class: "block text-gray-700" %>
          <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400" %>
        </div>

        <!-- Phone Number -->
        <div class="mb-4">
          <%= form.label :phone_number, "Phone Number", class: "block text-gray-700" %>
          <%= form.text_field :phone_number, class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400" %>
        </div>
      </div>

     
    
    <!-- Submit Button -->
    <div class="mt-6">
      <%= form.submit "Update Profile", class: "px-4 py-2 bg-lightGreen text-white rounded-md hover:bg-lightGreen" %>
    </div>
  <% end %>
</div>
