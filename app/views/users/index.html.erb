<h1 class="text-2xl font-bold mb-6">All Users</h1>
<div class="mb-4">
  <%= link_to 'All Districts', districts_path, class: 'bg-green-500 text-white px-4 py-2 rounded-lg shadow hover:bg-green-600 focus:outline-none mr-2' %>
  <%= link_to 'All Counties', counties_path, class: 'bg-purple-500 text-white px-4 py-2 rounded-lg shadow hover:bg-purple-600 focus:outline-none mr-2' %>
  <%= link_to 'All Sub-Counties', sub_counties_path, class: 'bg-yellow-500 text-white px-4 py-2 rounded-lg shadow hover:bg-yellow-600 focus:outline-none mr-2' %>
  <%= link_to 'Create User', new_user_path, class: 'bg-blue-500 text-white px-4 py-2 rounded-lg shadow hover:bg-blue-600 focus:outline-none' %>
</div>
<table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-lg">
  <thead class="bg-gray-50">
    <tr>
      <th class="py-2 px-4 border-b border-gray-200 text-left text-gray-600 font-semibold">First Name</th>
      <th class="py-2 px-4 border-b border-gray-200 text-left text-gray-600 font-semibold">Last Name</th>
      <th class="py-2 px-4 border-b border-gray-200 text-left text-gray-600 font-semibold">Phone Number</th>
      <th class="py-2 px-4 border-b border-gray-200 text-left text-gray-600 font-semibold">Email</th>
      <th class="py-2 px-4 border-b border-gray-200 text-left text-gray-600 font-semibold">Role</th>
      <th class="py-2 px-4 border-b border-gray-200 text-left text-gray-600 font-semibold">Branch</th>
      <th class="py-2 px-4 border-b border-gray-200 text-left text-gray-600 font-semibold">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr class="border-b hover:bg-gray-50 <%= 'border-4 border-blue-500' if user == current_user %>">
        <td class="py-2 px-4 text-gray-700"><%= user.first_name %></td>
        <td class="py-2 px-4 text-gray-700"><%= user.last_name %></td>
        <td class="py-2 px-4 text-gray-700"><%= user.phone_number %></td>
        <td class="py-2 px-4 text-gray-700"><%= user.email %></td>
        <td class="py-2 px-4 text-gray-700"><%= user.role %></td>
        <td class="py-2 px-4 text-gray-700"><%= user.branch&.name %></td>
        <td class="py-2 px-4">
          <%= link_to 'Show', user_path(user), class: 'bg-blue-500 text-white px-2 py-1 rounded hover:bg-blue-600' %>
          <%= button_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'bg-red-500 text-white px-2 py-1 rounded hover:bg-red-600' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="mt-6">
  <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'bg-red-500 text-white px-4 py-2 rounded-lg shadow hover:bg-red-600 focus:outline-none' %>
</div>
