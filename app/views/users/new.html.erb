<%= form_with model: @user, local: true do |form| %>
  <div>
    <%= form.label :first_name %>
    <%= form.text_field :first_name, required: true %>
  </div>
  <div>
    <%= form.label :last_name %>
    <%= form.text_field :last_name, required: true %>
  </div>
  <div>
    <%= form.label :phone_number %>
    <%= form.telephone_field :phone_number, required: true %>
  </div>
  <div>
    <%= form.label :role %>
    <%= form.select :role, User::ROLES, { include_blank: true }, required: true %>
  </div>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email, required: true %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password, required: true %>
  </div>
  <div>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, required: true %>
  </div>
  <div>
    <%= form.label :branch_id %>
    <%= form.collection_select :branch_id, Branch.all, :id, :name, include_blank: true %>
  </div>
  <div>
    <%= form.submit 'Create User' %>
  </div>
<% end %>
