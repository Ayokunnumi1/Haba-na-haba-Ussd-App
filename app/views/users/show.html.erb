      <div class="flex justify-center items-center">
        <%= image_tag(@user.image.attached? ? url_for(@user.image) : "user.png", class: "rounded-full w-20 h-20 md:w-24 md:h-24 border-4 border-white shadow-md", alt: @user.first_name) %>
      </div>
      <p class="text-2xl font-bold"><%= @user.first_name %></p>
      <p class="text-lg font-light text-gray-300"><%= @user.role %></p>
      
      <ul class="flex items-center justify-center gap-4 mt-2">
