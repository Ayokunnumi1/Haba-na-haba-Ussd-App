  <div class="bg-darkBlue px-8 text-white rounded-2xl font-Outfit bg-users-show max-w-lg w-full md:max-w-2xl lg:max-w-3xl shadow-lg">
    <%= button_to users_path, method: :get, class: "mt-5 inline-flex items-center text-white hover:text-gray-300 transition duration-150 ease-in-out" do %>
      <%= image_tag("back-icon.svg", alt: "back", class: "w-6 h-6 mr-2") %> Back
    <% end %>

